<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile">

    <Button
        android:id="@+id/createchatbutton"
        android:layout_width="192dp"
        android:layout_height="59dp"
        android:backgroundTint="#6EA470"
        android:text="CREATE GROUP"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <Button
        android:id="@+id/LogoutFromProfileButton"
        android:layout_width="120dp"
        android:layout_height="39dp"
        android:backgroundTint="#6EA470"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MUCChatButton"
        app:layout_constraintVertical_bias="0.898" />

    <Button
        android:id="@+id/sendinvitationbutton"
        android:layout_width="192dp"
        android:layout_height="59dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#6EA470"
        android:text="Send Invitation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/createchatbutton" />

    <Button
        android:id="@+id/MUCChatButton"
        android:layout_width="192dp"
        android:layout_height="59dp"
        android:layout_marginTop="43dp"
        android:backgroundTint="#6EA470"
        android:text="Join Chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendinvitationbutton" />
</androidx.constraintlayout.widget.ConstraintLayout>